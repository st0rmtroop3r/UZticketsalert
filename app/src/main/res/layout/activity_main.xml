<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="study.bionic.uzticketsalert.MainActivity"
    android:orientation="vertical">

    <AutoCompleteTextView
        android:completionHint="Select from the list..."
        android:id="@+id/fromStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:hint="from"
        android:background="@android:color/holo_green_dark"/>

    <AutoCompleteTextView
        android:id="@+id/toStation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="16dp"
        android:layout_margin="4dp"
        android:hint="to"
        android:background="@android:color/holo_green_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="04dp"
        android:padding="0dp"
        android:background="@android:color/holo_orange_light">

        <Button
            android:id="@+id/btnDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:text="@string/pick_date"
            android:onClick="showDatePickerDialog"/>

        <Button
            android:id="@+id/btnTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:text="3:00 AM"
            android:onClick="showTimePickerDialog"/>

    </LinearLayout>
    <Button
        android:text="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button" />

    <TextView
        android:text="test 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testView1" />

    <TextView
        android:text="test 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testView2" />

    <TextView
        android:text="test 3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testView3" />

</LinearLayout>
